<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="ekalaya.id.speedinvid.ui.editor.EditorActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000000"
        android:layout_weight="2">
        <VideoView
            android:id="@+id/vv_editor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_slowmo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_weight="1">
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/img_slowmo"
                android:layout_width="wrap_content"
                android:background="@mipmap/ic_slow"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_slowmo"
                android:layout_width="wrap_content"
                android:text="Create Slow Motion"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_timelapse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_timelapse"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:background="@mipmap/ic_timelapse"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_timelapse"
                android:layout_width="wrap_content"
                android:text="Create Timelapse"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
