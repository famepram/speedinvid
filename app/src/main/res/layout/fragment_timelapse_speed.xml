<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    tools:context="ekalaya.id.speedinvid.ui.timelapse.fragments.FragmentTimelapseSpeed">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Slower"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:text="Faster"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wrap_overlay"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:weightSum="2">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:background="#40cfd8dc"
            android:layout_weight="1">

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:background="#4037474f"
            android:layout_weight="1">

        </RelativeLayout>
    </LinearLayout>

    <SeekBar
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:paddingTop="10dp"
        android:layout_centerVertical="true"
        android:progressDrawable="@drawable/tl_progress"
        android:thumbTint="@color/colorGreyText"
        android:minHeight="1dp"
        android:maxHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/wrap_overlay"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_alignParentLeft="true"
            android:textSize="10sp"
            android:text="0.1x"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"
            android:textSize="10sp"
            android:text="1x"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:text="10x"/>
    </RelativeLayout>
</RelativeLayout>
